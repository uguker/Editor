<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:padding="@dimen/paddingContent">

            <!-- TODO 字体大小 -->
            <LinearLayout
                android:id="@+id/editor_menu_font_size"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/btn_white_round_rectangle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBody"
                    android:text="@string/editor_font_size"
                    android:textSize="@dimen/fontCaption" />

                <TextView
                    android:id="@+id/editor_menu_font_size_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingSmall"
                    android:text="16"
                    android:textColor="@color/light_blue_500"
                    android:textSize="@dimen/fontHead" />

            </LinearLayout>
            <!-- TODO 字体 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="@dimen/marginSmall"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/editor_menu_font_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_white_round_rectangle"
                    android:gravity="center"
                    android:text="宋体"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontHead" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/lineHeight"
                    android:layout_marginTop="@dimen/marginSmall"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="6dp">

                    <ImageView
                        android:id="@+id/editor_menu_bold"
                        style="@style/ActionImageView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/paddingSmall"
                        android:src="@drawable/ic_format_bold" />

                    <ImageView
                        android:id="@+id/editor_menu_italic"
                        style="@style/ActionImageView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/paddingSmall"
                        android:src="@drawable/ic_format_italic" />

                    <ImageView
                        android:id="@+id/editor_menu_underline"
                        style="@style/ActionImageView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/paddingSmall"
                        android:src="@drawable/ic_format_underlined" />

                    <ImageView
                        android:id="@+id/editor_menu_strikethrough"
                        style="@style/ActionImageView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:padding="@dimen/paddingSmall"
                        android:src="@drawable/ic_format_strikethrough" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/paddingSmall"
            android:background="@color/colorBackground"
            android:orientation="vertical"
            android:padding="@dimen/paddingContent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editor_font_color"
                android:textSize="@dimen/fontCaption" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingSmall"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal">

                <com.uguke.demo.editor.widget.ColorPaletteView
                    android:id="@+id/cpv_font_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginContent"
                android:text="@string/editor_font_highlight_color"
                android:textSize="@dimen/fontCaption" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingSmall"
                android:gravity="center"
                android:orientation="horizontal">

                <com.uguke.demo.editor.widget.ColorPaletteView
                    android:id="@+id/cpv_highlight_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/ll_line_height"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_white_round_rectangle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/font_spacing"
                    android:textSize="@dimen/text_micro" />

                <TextView
                    android:id="@+id/tv_font_spacing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/light_blue_500"
                    android:textSize="@dimen/text_large"
                    tools:text="16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/editor_menu_justify_left"
                    style="@style/ActionImageView"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_format_align_left" />

                <ImageView
                    android:id="@+id/editor_menu_justify_center"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_format_align_center" />

                <ImageView
                    android:id="@+id/editor_menu_justify_right"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_format_align_right" />

                <ImageView
                    android:id="@+id/editor_menu_justify_full"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_format_align_justify" />

            </LinearLayout>

        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/ll_normal"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="@string/font_default_text"
                        android:textSize="@dimen/text_micro" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_style_normal"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h1"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="AaBb"
                        android:textSize="@dimen/text_large" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_style_heading_1"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h2"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="AaBbC"
                        android:textSize="@dimen/text_medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_style_heading_2"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="AaBbCcD"
                        android:textSize="@dimen/text_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/font_style_heading_3"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="AaBbCcDd"
                        android:textSize="@dimen/text_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heading_4"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h5"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="AaBbCcDd"
                        android:textSize="@dimen/text_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heading_5"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_h6"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/round_rectangle_white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="AaBbCcDd"
                        android:textSize="@dimen/text_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginBottom="4dp"
                        android:background="#e0e0e0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heading_6"
                        android:textSize="@dimen/text_micro" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/editor_menu_indent"
                    style="@style/ActionImageView"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_format_indent_increase" />

                <ImageView
                    android:id="@+id/editor_menu_outdent"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_format_indent_decrease" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/editor_menu_insert_bullets"
                    style="@style/ActionImageView"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_format_list_bulleted" />

                <ImageView
                    android:id="@+id/editor_menu_insert_numbers"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_format_list_numbered" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/editor_menu_subscript"
                    style="@style/ActionImageView"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_format_subscript" />

                <ImageView
                    android:id="@+id/editor_menu_superscript"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_format_superscript" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/editor_menu_blockquote"
                    style="@style/ActionImageView"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_format_quote" />

                <ImageView
                    android:id="@+id/editor_menu_code_block"
                    style="@style/ActionImageView"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_code_block" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/font_insert"
                android:textSize="@dimen/text_micro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/editor_menu_insert_image"
                    style="@style/ActionImageView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_insert_photo" />

                <ImageView
                    android:id="@+id/editor_menu_insert_link"
                    style="@style/ActionImageView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_material"
                    android:padding="8dp"
                    android:src="@drawable/ic_insert_link" />

                <ImageView
                    android:id="@+id/editor_menu_table"
                    style="@style/ActionImageView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_material"
                    android:padding="11dp"
                    android:src="@drawable/ic_table" />

                <ImageView
                    android:id="@+id/editor_menu_line"
                    style="@style/ActionImageView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_line" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_rectangle_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/editor_menu_code_view"
                    style="@style/ActionImageView"
                    android:background="@drawable/btn_white_material"
                    android:padding="10dp"
                    android:src="@drawable/ic_code_review" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
